{
    "schemaVersion": 1,
    "id": "screenshots",
    "version": "${version}",
    "name": "Screenshots",
    "description": "Adds some more functionality to screenshots",
    "authors": [
        "Squagward"
    ],
    "contact": {
        "homepage": "https://github.com/camnwalter/Screenshots",
        "sources": "https://github.com/camnwalter/Screenshots",
        "issues": "https://github.com/camnwalter/Screenshots/issues"
    },
    "license": "MIT",
    "icon": "assets/screenshots/icon.png",
    "environment": "client",
    "entrypoints": {
        "client": [{
            "adapter": "kotlin",
            "value": "com.squagward.screenshots.Screenshots"
        }],
        "modmenu": ["com.squagward.screenshots.entry.ModMenuEntry"]
    },
    "mixins": [
        "screenshots.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=0.14.21",
        "minecraft": "~1.20.1",
        "java": ">=17",
        "fabric-api": "*",
        "fabric-language-kotlin": ">=${fabric_kotlin_version}",
        "yet_another_config_lib_v3": "*",
        "modmenu": "*"
    }
}
